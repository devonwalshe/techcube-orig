.container
  .row
    .span9
                
      -@posts[0..-1].each do |post|
        .row
          .span9
            .t2em.top-twenty-margin
              =post.updated_at.strftime("%A %B %m, %Y // %H:%M:%S")
            .box_top
              .box_tr 
              .box_tl
              .box_tm{:style=> "background: #fff"} 
            .box_mid.threecol
              .colmid
                .box_ml
                  .box_mm
                    .box_mc{:style=> "background: #fff"}
                      .t2em.top-twenty-margin
                        %a{:href => "/news/#{post.to_url}"}
                          =post.title
                      %div.muli.t0-8em
                        =truncate_html post.body.html_safe, length: 150, omission: '...(continued)'
                      .block.ten-padding
                        %a{:href => "/news/#{post.to_url}"}
                          read more
                      -if signed_in?
                        .pull-right
                          %a{:href => "admin/posts/edit/#{post.id}"}
                            Edit this post

            .box_bottom
              .box_br 
              .box_bl
              .box_bm     
    .span3
      =render :partial => "/layouts/sidebar"

                                                                  
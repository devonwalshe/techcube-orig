.row
  .span3
    - flash.each do |key, value|
      .bottom-ten-margin
        %div{:class => "flash #{key}"}
          = value

    .dosis.tw400.t2em.bottom-twenty-margin
      Sign up for our mailing list
    = form_for @contact, :url => url_for(:controller => 'contacts', :action => 'create') do |f|
      = f.text_field :name,  :placeholder => "name"
      = f.text_field :email, :placeholder => "email", :class=>"small"
      = f.label :iama, "I am"
      = f.select :iama, ["working in a startup", "an investor", "working in professional services", "a student", "just interested"]
      %br
      = f.submit "Sign up", :class=>"btn btn-success pull-right"

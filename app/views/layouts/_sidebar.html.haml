      function initialize() {
        var mapOptions = {
          center: new google.maps.LatLng(55.945, -3.185),
          zoom: 15,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };

        var map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);
        // var contentString = 'get with this';

        var infowindow = new google.maps.InfoWindow({
            content: 'get with this',
            maxwidth: 150
        });
        
        var cube_image = "http://gubbins.s3.amazonaws.com/favicon.ico"
        
        var marker = new google.maps.Marker({
           icon: cube_image,
           position:  new google.maps.LatLng(55.945, -3.185),
           map: map,
           title: "whats up!"
        });

        //google.maps.event.addListener(marker, 'click', function() {
        //  infowindow.open(map,marker);
        //});

      }

      function loadScript() {
        var script = document.createElement("script");
        script.type = "text/javascript";
        script.src = "http://maps.googleapis.com/maps/api/js?key=AIzaSyDSxwX0QVXxSm2-rHIisLXOSrj5Lw2ZINs&sensor=false&callback=initialize";
        document.body.appendChild(script);
      }

      window.onload = loadScript;


      %a{:href=>"/", :style => "color:#fff"}
        Home
  -else
    .nav-item
      %a{:href=>"/", :style => "color:#fff"}
        Home


  -if params[:action] == "news"
    .nav-item.nav-item-active
      %a{:href=>"/news", :style => "color:#fff"}
        News
  -else
    .nav-item
      %a{:href=>"/news", :style => "color:#fff"}

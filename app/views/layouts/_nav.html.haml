        Jobs
  -else
    .nav-item
      %a{:href=>"/jobs", :style => "color:#fff"}
        Jobs

  -Page.all.each do |page|
    -if params[:url] == page.url
      .nav-item.nav-item-active
        %a{:href=>"/#{page.url}", :style => "color:#fff"}
          =page.title
    -else
      .nav-item
        %a{:href=>"/#{page.url}", :style => "color:#fff"}
          =page.title